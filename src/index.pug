                    .skills-techs
                       -for (var i = 0; i < skillsicon.length ; i++)
                        .skill 
                            i(class=skillsicon[i])
                            span #{skillstext[i]}
                .projects 
                    .title 
                        h2 projects
                        span robin hood
                    .sub-title 
                        hr
                        span take look at my
                    .main-projects 
                        .project
                            .img 
                                img(src="#", alt="")
                            .text-box 
                                .techs html, css
                                .name leaon template 
